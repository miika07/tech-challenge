{
  "name": "tech-challenge-fiap",
  "version": "1.0.0",
  "description": "Projeto de pós graduação FIAP - 5SOAT",
  "main": "index.js",
  "scripts": {
    "dev": "npm run nodemon:build",
    "nodemon:build": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts",
    "build": "scripts/build.sh",
    "test": "scripts/test.sh",
    "build:run": "npm run migration:run && ts-node src/index.ts",
    "start": "ts-node src/index.ts",
    "typeorm": "typeorm-ts-node-commonjs -d src/infra/data/database/data-source.ts",
    "migration:generate": "npm run typeorm migration:generate ./src/infra/data/database/migrations/database",
    "migration:run": "npm run typeorm migration:run",
    "migration:create": "typeorm-ts-node-commonjs migration:create ./src/infra/data/database/migrations/Migration",
    "build:tsc": "rm -rf ./dist && mkdir dist && tsc -p ./tsconfig.json"
  },
  "author": "Camila Couto e Melina Carniel",
  "license": "ISC",
  "dependencies": {
    "@hapi/hapi": "^21.3.2",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "@types/hapi": "^18.0.14",
    "axios": "^1.6.5",
    "dotenv": "^16.3.1",
    "hapi-auth-jwt2": "^10.5.0",
    "hapi-swagger": "^17.2.0",
    "mysql2": "^3.7.1",
    "reflect-metadata": "^0.2.1",
    "retry-axios": "^3.1.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.19",
    "uuidv4": "^6.2.13",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  }
}
